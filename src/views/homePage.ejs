<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="socket.io/socket.io.js"></script>

    <script>
        var socket = io("http://localhost:8082");
        $(document).ready(function () {
            $("#btn").click(function () {
                socket.emit("SendToServer", $("#idAuction").val(), $("#price").val(), $("#idUser").val());
            });
        });
        socket.on("SendToClient", function (auction) {
            $("#noidung").append(auction);
        })


    </script>
</head>

<body>
    <h1>Hello! This is homepage</h1>
    <p>
        <%= data%>
    </p>

    <button type="button" id="nhan">Click</button>
    <input type="number" id="idAuction" />
    <input type="number" id="price" />
    <input type="number" id="idUser" />
    <input type="button" id="btn" value="Send" />
    <h2 id="noidung"></h2>
</body>

</html>